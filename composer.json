{
    "name": "tpay-com/coding-standards",
    "description": "Tpay.com coding standards library",
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^7.4 || ^8.0",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.16.2",
        "php-cs-fixer/shim": "^3.22"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6.11",
        "vimeo/psalm": "^5.15.0"
    },
    "autoload": {
        "psr-4": {
            "Tpay\\CodingStandards\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tpay\\CodingStandards\\Tests\\": "./src/"
        }
    },
    "scripts": {
        "fix": [
            "php-cs-fixer fix -vvv"
        ],
        "verify": [
            "php-cs-fixer fix -vvv --diff --dry-run",
            "mkdir -p ./var",
            "@composer require friendsofphp/php-cs-fixer --no-interaction --working-dir=./var",
            "psalm --no-progress --shepherd",
            "phpunit --bootstrap=./var/vendor/autoload.php --no-configuration ./tests"
        ]
    }
}
